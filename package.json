{
  "name": "shopwise",
  "version": "1.0.0",
  "description": "Shopwise --- Point of Sale System. A simple and easy to use POS system for your business.",
  "author": {
    "name": "Digisol 365",
    "email": "info@digisol365.com"
  },
  "main": "main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"vite\" \"electron .\"",
    "start": "npm run build && electron .",
    "build": "vite build",
    "preview": "vite preview",
    "electron:build": "vite build && electron-builder",
    "dist": "electron-builder",
    "build:win": "npm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "@date-io/dayjs": "^3.0.0",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.12",
    "@mui/material": "^5.15.12",
    "@mui/x-date-pickers": "^7.22.2",
    "date-fns": "^3.3.1",
    "dayjs": "^1.11.13",
    "electron-store": "^8.1.0",
    "file-saver": "^2.0.5",
    "idb": "^8.0.0",
    "jspdf": "^2.5.1",
    "jszip": "^3.10.1",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "react-to-print": "^2.15.1",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "vite": "^5.1.5"
  },
  "build": {
    "appId": "com.digisol.shopwise",
    "productName": "Shopwise",
    "directories": {
      "output": "build-output"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/images/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
